<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dip"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_round"
                android:layout_width="@dimen/common_dimen_100dip"
                android:layout_height="@dimen/common_dimen_100dip"
                android:visibility="visible"
                fresco:actualImageScaleType="centerCrop"
                fresco:fadeDuration="300"
                fresco:failureImage="@color/colorPrimary"
                fresco:failureImageScaleType="centerCrop"
                fresco:placeholderImage="@color/colorPrimary"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundAsCircle="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_dimen_100dip"
                android:layout_marginLeft="@dimen/common_dimen_30dip"
                android:gravity="center_vertical"
                android:text="SimpleDraweeView roundAsCircle" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dimen_10dip">


                <View
                    android:layout_width="13.3dip"
                    android:layout_height="13.3dip"
                    android:background="#FF0000" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_month"
                    android:layout_width="13.3dip"
                    android:layout_height="13.3dip"
                    android:visibility="visible"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:fadeDuration="300"
                    fresco:failureImage="@color/colorPrimary"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:placeholderImage="@color/colorPrimary"
                    fresco:placeholderImageScaleType="centerCrop" />


            </FrameLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_marginLeft="@dimen/common_dimen_20dip"
                android:gravity="center">


                <View
                    android:id="@+id/llllll"
                    android:layout_width="13.3dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center_vertical"
                    android:background="#FF0000" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_year"
                    android:layout_width="13.3dip"
                    android:layout_height="13.3dip"
                    android:layout_gravity="center_vertical"
                    android:visibility="visible"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:fadeDuration="300"
                    fresco:failureImage="@color/colorPrimary"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:placeholderImage="@color/colorPrimary"
                    fresco:placeholderImageScaleType="centerCrop" />


            </FrameLayout>
        </LinearLayout>


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_avatar"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/square_app_icon"
            android:visibility="visible"
            app:riv_border_color="#FF0000"
            app:riv_border_width="5dip"
            app:riv_oval="true" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sv_local_drawable"
            android:layout_width="@dimen/common_dimen_100dip"
            android:layout_height="@dimen/common_dimen_100dip"
            android:visibility="visible"
            fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="300"
            fresco:failureImage="@color/colorPrimary"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@color/colorPrimary"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="#FF0000"
            fresco:roundingBorderWidth="5dip" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sv_local_file_img"
            android:layout_width="@dimen/common_dimen_100dip"
            android:layout_height="@dimen/common_dimen_100dip"
            android:visibility="visible"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="300"
            fresco:failureImage="@color/colorPrimary"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@color/colorPrimary"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="#FF0000"
            fresco:roundingBorderWidth="5dip" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sv_local_file_img2"
            android:layout_width="@dimen/common_dimen_100dip"
            android:layout_height="@dimen/common_dimen_100dip"
            android:visibility="visible"
            fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="300"
            fresco:failureImage="@drawable/square_app_icon"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/square_app_icon"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sv_local_file_img3"
            android:layout_width="@dimen/common_dimen_100dip"
            android:layout_height="@dimen/common_dimen_100dip"
            android:visibility="gone"
            fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="300"
            fresco:failureImage="@drawable/square_app_icon"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/square_app_icon"
            fresco:placeholderImageScaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/ll_new_layout"
            android:layout_width="@dimen/common_dimen_100dip"
            android:layout_height="@dimen/common_dimen_100dip"
            android:background="#FF00FF"
            android:orientation="horizontal">


        </LinearLayout>

        <ImageView
            android:id="@+id/image_image"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:background="@color/colorPrimary"
            android:visibility="visible" />

    </LinearLayout>


</ScrollView>