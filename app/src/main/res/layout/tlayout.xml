<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dip"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_round"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="visible"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="300"
        fresco:failureImage="@color/colorPrimary"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@color/colorPrimary"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="#FF0000"
        fresco:roundingBorderWidth="5dip" />


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_avatar"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/square_app_icon"
        app:riv_border_color="#FF0000"
        app:riv_border_width="5dip"
        app:riv_oval="true" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sv_local_drawable"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="visible"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="300"
        fresco:failureImage="@color/colorPrimary"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@color/colorPrimary"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="#FF0000"
        fresco:roundingBorderWidth="5dip" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sv_local_file_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="visible"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="300"
        fresco:failureImage="@color/colorPrimary"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@color/colorPrimary"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="#FF0000"
        fresco:roundingBorderWidth="5dip" />

    <ImageView
        android:id="@+id/image_image"
        android:background="@color/colorPrimary"
        android:layout_width="100dip"
        android:layout_height="100dip" />
</LinearLayout>