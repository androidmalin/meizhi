<?xml version="1.0" encoding="utf-8"?>
<com.facebook.drawee.view.SimpleDraweeView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image_large_item_img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    fresco:actualImageScaleType="focusCrop"

    android:background="@color/colorPrimary"

    fresco:fadeDuration="300"

    fresco:failureImage="@color/colorAccent"
    fresco:failureImageScaleType="centerCrop"

    fresco:placeholderImage="@color/colorPrimary"
    fresco:placeholderImageScaleType="centerCrop"

    fresco:progressBarAutoRotateInterval="1000"
    fresco:progressBarImage="@drawable/loading_bar"
    fresco:progressBarImageScaleType="center" />