<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/common_dimen_15dip">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_item_list_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="visible"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="300"
            fresco:failureImage="@color/colorPrimary"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImage="@color/colorPrimary"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:pressedStateOverlayImage="@color/pressed_color"
            fresco:retryImage="@color/colorAccent"
            fresco:retryImageScaleType="centerCrop" />
    </android.support.v7.widget.CardView>


</LinearLayout>